.page(data-page="swiper-zoom")
  .navbar
    .navbar-inner
      .left.sliding
        a(href="swiper.html").back.link.icon-only
          i.icon.icon-back
      .center.sliding Zoom
      .right
        a(href="#").open-panel.link.icon-only
          i.icon.icon-bars
  .page-content
    .swiper-container.swiper-init.ks-demo-slider(data-pagination=".swiper-pagination", data-zoom="true", data-next-button=".swiper-button-next", data-prev-button=".swiper-button-prev")
      .swiper-wrapper
        - for (var i = 1; i < 10; i++)
          .swiper-slide
            .swiper-zoom-container
              img(src="http://lorempixel.com/800/800/nature/#{i}")
      .swiper-button-next
      .swiper-button-prev
      .swiper-pagination